<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.actions.ActionsFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/linearLayout">

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/payLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="支出／収入の記録"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:id="@+id/textView14" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <Button
                            android:text="レシートを読み取る"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="15dp"
                            android:padding="20dp"
                            android:background="@drawable/button2_background"
                            android:id="@+id/button7"
                            android:drawableTop="@drawable/baseline_receipt_long_24" />

                    <Button
                            android:text="支出を入力する"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="15dp"
                            android:padding="20dp"
                            android:background="@drawable/button2_background"
                            android:id="@+id/button8"
                            android:drawableTop="@drawable/baseline_add_shopping_cart_24" />

                    <Button
                            android:text="収入を入力する"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="15dp"
                            android:padding="20dp"
                            android:background="@drawable/button3_background"
                            android:id="@+id/button9"
                            android:drawableTop="@drawable/baseline_add_card_24" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/dateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="SDGsマークの記録"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:id="@+id/textView16" />

                <Button
                        android:text="マークを読み取る"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        android:padding="20dp"
                        android:background="@drawable/button4_background"
                        android:id="@+id/button10"
                        android:drawableEnd="@drawable/baseline_navigate_next_24" />

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/dateLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="賞味期限・消費期限の記録"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:id="@+id/textView17" />

                <Button
                        android:text="賞味・消費期限を入力する"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        android:padding="20dp"
                        android:background="@drawable/button5_background"
                        android:id="@+id/button11"
                        android:drawableEnd="@drawable/baseline_navigate_next_24" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>